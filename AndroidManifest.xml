<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grsynth.japaneseassistant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >

        <!-- android:theme="@style/AppBaseTheme" -->
        <activity
            android:name="com.grsynth.japaneseassistant.activity.MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.ListActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.SettingsActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.TestResultActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.MeaningToKanjiTestActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.KanjiTestSettingsActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.KanjiToMeaningTestActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.KanjiToOnyomiTestActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.KanjiToKunyomiTestActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.KanjiEntryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.VocabEntryActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.grsynth.japaneseassistant.activity.KanjiGridActivity"
            android:launchMode="singleInstance" >
        </activity>
    </application>

</manifest>